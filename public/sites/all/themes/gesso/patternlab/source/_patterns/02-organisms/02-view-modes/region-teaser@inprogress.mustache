<article class="card card--icons card--center">
  <div class="card__image">
    <a href="{{ url }}">{{> atoms-card-image }}</a>
  </div>
  <div class="card__content">
    <h3 class="card__primary-title"><a href="#">Latin America / Caribbean</a></h3>
    <div class="card__counts">
      <div class="view">
        <div class="has-icon--funding" title="Funding">{{ funders }}</div>
      </div>
      <div class="view">
        <div class="has-icon--innovation" title="Innovations">{{ innovations }}</div>
      </div>
      <div class="view">
        <div class="has-icon--resource" title="Resources">{{ resources }}</div>
      </div>
    </div>
  </div>
</article>
