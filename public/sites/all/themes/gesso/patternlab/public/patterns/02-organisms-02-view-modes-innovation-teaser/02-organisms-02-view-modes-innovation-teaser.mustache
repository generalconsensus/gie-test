&lt;article class=&quot;card card--icons&quot;&gt;
  &lt;div class=&quot;card__image&quot;&gt;
    &lt;a href=&quot;{{ url }}&quot;&gt;{{&gt; atoms-card-image }}&lt;/a&gt;
  &lt;/div&gt;
  &lt;div class=&quot;card__content&quot;&gt;
    &lt;h3 class=&quot;card__title&quot;&gt;&lt;a href=&quot;{{ url }}&quot;&gt;{{ title }}&lt;/a&gt;&lt;/h3&gt;
    &lt;div&gt;{{{ summary }}}&lt;/div&gt;
    &lt;div class=&quot;card__counts&quot;&gt;
      &lt;div class=&quot;view&quot;&gt;
        &lt;div class=&quot;has-icon--evidence&quot; title=&quot;Evidence&quot;&gt;{{ evidence }}&lt;/div&gt;
      &lt;/div&gt;
      &lt;div class=&quot;view&quot;&gt;
        &lt;div class=&quot;has-icon--comment&quot; title=&quot;Comments&quot;&gt;{{ comments }}&lt;/div&gt;
      &lt;/div&gt;
      &lt;div class=&quot;view&quot;&gt;
        &lt;div class=&quot;has-icon--funding&quot; title=&quot;Funding&quot;&gt;{{ funders }}&lt;/div&gt;
      &lt;/div&gt;
      &lt;div class=&quot;view&quot;&gt;
        &lt;div class=&quot;has-icon--favorite&quot; title=&quot;Favorites&quot;&gt;{{ favorites }}&lt;/div&gt;
      &lt;/div&gt;
      &lt;div class=&quot;view&quot;&gt;
        &lt;div class=&quot;has-icon--assistance&quot; title=&quot;Assistance&quot;&gt;{{ assistance }}&lt;/div&gt;
      &lt;/div&gt;
    &lt;/div&gt;
  &lt;/div&gt;
&lt;/article&gt;
