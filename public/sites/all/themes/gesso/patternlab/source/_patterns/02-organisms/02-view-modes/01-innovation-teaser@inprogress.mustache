<article class="card">
  <div class="card__image">
    <a href="{{ url }}">{{> atoms-card-image }}</a>
  </div>
  <div class="card__content">
    <h3 class="card__title"><a href="{{ url }}">{{ title }}</a></h3>
    <div>{{{ summary }}}</div>
    <div class="card__counts">
      <div class="view">
        <div class="has-icon--evidence" title="Evidence">0</div>
      </div>
      <div class="view">
        <div class="has-icon--comment" title="Comments">12</div>
      </div>
      <div class="view">
        <div class="has-icon--organization" title="Organizations">5</div>
      </div>
      <div class="view">
        <div class="has-icon--favorite" title="Favorites">6</div>
      </div>
    </div>
  </div>
</article>
