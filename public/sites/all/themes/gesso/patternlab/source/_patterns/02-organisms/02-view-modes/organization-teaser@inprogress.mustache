<article class="card card--icons">
  <div class="card__image">
    <a href="{{ url }}">{{> atoms-card-image }}</a>
  </div>
  <div class="card__content">
    <h3 class="card__title"><a href="{{ url }}">{{ title }}</a></h3>
    <div>{{{ summary }}}</div>
    <div class="card__counts">
      <div class="view">
        <div class="has-icon--innovation" title="Innovations">{{ innovations }}</div>
      </div>
      <div class="view">
        <div class="has-icon--member" title="Members">{{ members }}</div>
      </div>
      <div class="view">
        <div class="has-icon--favorite" title="Favorites">{{ favorites }}</div>
      </div>
    </div>
  </div>
</article>
