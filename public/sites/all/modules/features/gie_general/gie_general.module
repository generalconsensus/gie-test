/**
 * Callback to change the theme for nodes.
 */
function _gie_general_node_theme($node){
  global $theme;
  switch ($node->type) {
    // Change theme for long form pages
    case 'long_form_page':
      return 'gesso_longform';
    default:
      return $theme;
  }
}
/*
 * Implements hook_cron fixing slow cache clears
 */
function gie_general_cron() {
  global $user;
  global $base_url;

  $cid = 'admin_menu:';
  if (isset($user->uid)) {
    $cid .= $user->uid;
  }

  // Clear the cache for the admin menu.
  cache_clear_all(isset($user->uid) ? $cid : '*', 'cache_admin_menu', TRUE);

  // A HTTP request will rebuild the menu.
  drupal_http_request($base_url);
}


/**
 * Implements hook_block_view_alter().
 */
function gie_general_block_view_alter(&$data, $block) {

  $block_names = array(
    'innovation',
    'funding'
  );
  //Check that the node we are adding is an innovation
  if (in_array($block->delta, $block_names)) {
    $router_item = menu_get_item();
    $node_object = menu_get_object('node', 1);

    if (empty($node_object)) {
      unset($data['content']);
    }
    elseif (($node_object->type == 'innovation') || !empty($router_item['map'][2]) && is_string(
        $router_item['map'][2]
      ) && $router_item['map'][2] == 'innovation'
    ) {
      switch ($block->delta) {
        case 'innovation':
          $data['content']['multistep_block_body']['#markup'] = '<div class="multistep-description"> The more you fill out your Innovation Profile, the better traffic you will receive on it through the Exchange and through search engines.</div>';
          foreach ($data['content']['multistep_block_navigation']['#children'] as $key => $value) {
            switch ($key) {
              case '0group_one':
                $data['content']['multistep_block_navigation']['#children'][$key]['label'] = 'Basic Information';
                break;
              case '1group_two':
                $data['content']['multistep_block_navigation']['#children'][$key]['label'] = 'Vision';
                break;
              case '2group_three':
                $data['content']['multistep_block_navigation']['#children'][$key]['label'] = 'Team';
                break;
              case '3group_four':
                $data['content']['multistep_block_navigation']['#children'][$key]['label'] = 'Funding';
                break;
              case '4group_five':
                $data['content']['multistep_block_navigation']['#children'][$key]['label'] = 'Evidence';
                break;
            }
          }
          break;
      }
    }
  elseif (($node_object->type == 'funding') || !empty($router_item['map'][2]) && is_string(
      $router_item['map'][2]
    ) && $router_item['map'][2] == 'funding'
  ) {
    switch ($block->delta) {
      case 'funding':
        $data['content']['multistep_block_body']['#markup'] = '<div class="multistep-description"> The more you fill out your Innovation Profile, the better traffic you will receive on it through the Exchange and through search engines.</div>';
        foreach ($data['content']['multistep_block_navigation']['#children'] as $key => $value) {
          switch ($key) {
            case '0group_funding_about':
              $data['content']['multistep_block_navigation']['#children'][$key]['label'] = 'Opportunity';
              break;
            case '1group_funding_info':
              $data['content']['multistep_block_navigation']['#children'][$key]['label'] = 'Additional Info';
              break;
            case '2group_funding_for_applicants':
              $data['content']['multistep_block_navigation']['#children'][$key]['label'] = 'For Applicants';
              break;
          }
        }
        break;
      }
    }
  }
}

function gie_general_test() {
  $taxonomies = db_query('select tid from taxonomy_term_data where name like (:semi)', array(':semi' => '%' . db_like(';') . '%'))->fetchCol('tid');
  foreach ($taxonomies as $taxonomy) {
    $taxonomy = taxonomy_term_load($taxonomy);
    $taxonomy->name = str_replace(';', ',', $taxonomy->name);
    taxonomy_term_save($taxonomy);
  }
}