<article class="card card--icons">
  <div class="card__image">
    <a href="{{ url }}">{{> atoms-card-image }}</a>
  </div>
  <div class="card__content">
    <h3 class="card__title"><a href="{{ url }}">{{ title }}</a></h3>
    <div>{{{ summary }}}</div>
    <div class="card__counts">
      <div class="view">
        <div class="has-icon--evidence" title="Evidence">{{ evidence }}</div>
      </div>
      <div class="view">
        <div class="has-icon--comment" title="Comments">{{ comments }}</div>
      </div>
      <div class="view">
        <div class="has-icon--funding" title="Funding">{{ funders }}</div>
      </div>
      <div class="view">
        <div class="has-icon--favorite" title="Favorites">{{ favorites }}</div>
      </div>
      <div class="view">
        <div class="has-icon--assistance" title="Assistance">{{ assistance }}</div>
      </div>
    </div>
  </div>
</article>
