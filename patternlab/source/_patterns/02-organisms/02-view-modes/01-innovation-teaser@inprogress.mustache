<article class="card">
  <div>
    <a href="{{ url }}">{{> atoms-card-image }}</a>
  </div>
  <div class="card__content">
    <h3 class="card__title"><a href="{{ url }}">{{ title }}</a></h3>
    <div>{{{ summary }}}</div>
    <div class="card__counts">
      <div class="view">
        <div class="has-icon--camera">0</div>
      </div>
      <div class="view">
        <div class="has-icon--comment">12</div>
      </div>
      <div class="view">
        <div class="has-icon--member">5</div>
      </div>
      <div class="view">
        <div class="has-icon--favorite">6</div>
      </div>
    </div>
  </div>
</article>
