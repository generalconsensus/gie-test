<div class="pane user-header">
  <div class="pane__content">
    <div class="layout-slat">
      <div class="layout-slat__media">
        <div class="user-header__photo">
          <img src="{{ user.img-178-178.src }}">
        </div>  
      </div>
      <div class="layout-slat__content">
        <div class="field user-header__name">
          {{ user.name }}
        </div>
        <div class="field user-header__organization">
          {{ user.org }}
        </div>
        <div class="field user-header__title">
           {{ user.title }}
        </div>
        <div class="user-header__meta">
          <div class="field user-header__address">
            {{ user.location }}
          </div>
          <div class="field user-header__member-since">
            Member since {{ month.short }} {{ day.short }}, {{ year.long }}
          </div>
          <div class="field user-header__type">
            <a href="/user-type/implementer">Implementer</a>, <a href="/user-type/researcher">Researcher</a>
          </div>  
        </div>
        <div class="flag-outer flag-outer-follow">
          <span class="flag-wrapper flag-follow">
            <a class="flag flag-action flag-link-toggle flag-processed" title="Follow this user" href="#">Follow</a><span class="flag-throbber">&nbsp;</span>
          </span>
        </div>
        <div class="field user-header__email">
          <a class="button button--light" href="mailto:mdrayer@forumone.com">Send Note</a>
        </div>  
      </div>
    </div>
  </div>  
</div>