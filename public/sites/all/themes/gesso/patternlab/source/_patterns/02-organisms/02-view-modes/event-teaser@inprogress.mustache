<article class="card">
  <h2 class="card__date">September 21</h2>
  <div class="card__image">
    <a href="{{ url }}">{{> atoms-card-image }}</a>
  </div>
  <div class="card__content">
    <h3 class="card__primary-title"><a href="{{ url }}">{{ title }}</a></h3>
    <div class="card__meta">
      <div class="card__list--split">
        <span class="card__list-label">Location:</span> 
        <span class="card__list-content">Alexandria, VA<br>United States</span>
      </div>
      <div class="card__list">
        <span class="card__list-label">Topic:</span> 
        <span class="card__list-content">Agriculture</span>
      </div>
    </div>
  </div>
</article>