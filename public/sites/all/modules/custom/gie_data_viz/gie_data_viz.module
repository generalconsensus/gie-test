<?php

/**
 * Implements hook_block_info().
 */
function gie_data_viz_block_info() {
  $blocks['gie_data_viz_country_inno_chart'] = array(
    'info' => t('GIE Data Viz - Countries with Most Innovations'),
  );

  return $blocks;
}

/**
 * Implements hook_block_view().
 */
function gie_data_viz_block_view($delta = '') {
  $block = array();

  switch($delta) {
    case 'gie_data_viz_country_inno_chart':
      _gie_data_viz_init();
      $block['subject'] = t('Countries with Most Innovations');
      $block['content'] = array(
        '#theme' => 'gie_data_viz_bar_chart',
        '#prefix' => '<div data-ng-controller="CountryInnovationsController">',
        '#suffix' => '</div>',
        '#attached' => array(
          'css' => array(
            drupal_get_path('module', 'gie_data_viz') . '/gie_data_viz.css',
          ),
        ),
      );
      break;
  }

  return $block;
}

/**
 * Helper function to get proper ElasticSearch URL.
 */
function _gie_data_viz_get_elastic_url() {
  $servers = variable_get('search_api_override_servers');
  $url = ($servers['elasticsearch']['options']['0']['host'] === 'localhost') ? 'http://localhost:9200' : 'http://search.gie.byf1.io';
  return $url;
}

/**
 * Helper function to get database name.
 */
function _gie_data_viz_get_database_name() {
  global $databases;
  return $databases['default']['default']['database'];
}

/**
 * Helper function to add proper JS files
 */
function _gie_data_viz_init() {
  //add app js
  $path = drupal_get_path('module', 'gie_data_viz');
  drupal_add_js($path . '/app/dependencies/d3.min.js');
  drupal_add_js($path . '/app/dependencies/elasticsearch.min.js');
  drupal_add_js($path . '/app/dependencies/elasticsearch.angular.min.js');
  drupal_add_js($path . '/app/src/app.js');
  angularjs_init_application('gieDataViz');

  drupal_add_js($path . '/app/src/controllers/countryInnovationsController.js');
  drupal_add_js($path . '/app/src/directives/barChart.js');
  drupal_add_js($path . '/app/src/directives/groupedBarChart.js');
  drupal_add_js($path . '/app/src/services/dataService.js');
  drupal_add_js($path . '/app/src/services/es.js');
  drupal_add_js($path . '/app/src/services/taxonomyTermService.js');

  //pass index and site information to javascript for AngularJS app to use
  drupal_add_js(array('gie_data_viz' =>
    array(
      'base' => 'elasticsearch_index_'. _gie_data_viz_get_database_name() . '_',
      'indices' => variable_get('elasticsearch_index'),
      'url' => _gie_data_viz_get_elastic_url(),
    ),
  ), array('type' => 'setting'));
}

/**
 * Implements hook_theme().
 */
function gie_data_viz_theme($existing, $type, $theme, $path) {
  $items = array();

  $items['gie_data_viz_bar_chart'] = array(
    'template' => 'gie-data-viz-bar-chart',
    'variables' => array(),
  );

  return $items;
}

