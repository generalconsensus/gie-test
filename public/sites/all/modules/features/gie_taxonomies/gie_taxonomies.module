<?php
/**
 * @file
 * Code for the GIE Taxonomies feature.
 */

include_once 'gie_taxonomies.features.inc';


/**
 * Implements hook_form_BASE_FORM_ID_alter().
 */
function gie_taxonomies_form_taxonomy_form_term_alter(&$form, &$form_state, $form_id) {
  $form['#validate'][] = 'gie_taxonomies_form_validate';
}

function gie_taxonomies_form_validate($form, $form_state) {
  if (!empty($form_state['input']['name_field'][LANGUAGE_NONE][0]['value']) && (strstr($form_state['input']['name_field'][LANGUAGE_NONE][0]['value'], ';'))) {
    form_set_error('name', 'Please do not add semi-colons to Taxonomy names. Use commas instead.');
  }
}