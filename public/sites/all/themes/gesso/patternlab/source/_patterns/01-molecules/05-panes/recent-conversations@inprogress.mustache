<div class="pane pane--recent-conversations-recent-conversations">
  <h2 class="pane__title">Recent Conversations</h2>  
  <div class="pane__content">
    <div class="view view--recent-conversations">
      {{# listItems.three }}
        <div class="views-row">
          <div class="layout-slat layout-slat--small">
            <div class="layout-slat__media">      
              <div class="view__author-image">
                <img src="{{ user.img-35-35.src }}">
              </div>
            </div>
            <div class="layout-slat__content">
              <div class="view__title"><a href="#">{{ title }}</a></div>
              <div class="view__meta">
                Posted by <strong>{{ user.name }}</strong> | {{ month.long }} {{ day.short }} at {{ hour.short }}:{{ minute.long}}{{ hour.ampm }}
              </div>
            </div>
          </div>
        </div>
      {{/ listItems.three }}
      <div class="view__footer">
        <a href="#" class="view__all">View All Discussions</a>
      </div>
    </div>
  </div>
</div>